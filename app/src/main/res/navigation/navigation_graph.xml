<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/navigation_graph"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/login">

    <fragment
        android:id="@+id/login"
        android:name="pl.mkotynia.musicmate.prelogin.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_search"
            app:destination="@id/search_profile"
            app:popUpTo="@+id/login"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/register"/>
        <action
            android:id="@+id/action_login_to_request_password_reset"
            app:destination="@id/reset_password_request"/>

        <action
            android:id="@+id/action_login_to_new_password"
            app:destination="@id/new_password"
            app:popUpTo="@+id/login"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/register"
        android:name="pl.mkotynia.musicmate.prelogin.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_register_to_edit_profile"
            app:destination="@id/edit_profile"
            app:popUpTo="@+id/login"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_registration_to_login"
            app:destination="@id/login"
            app:popUpTo="@+id/login"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/new_password"
        android:name="pl.mkotynia.musicmate.prelogin.NewPasswordFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_new_password_to_login"
            app:destination="@id/login"
            app:popUpTo="@+id/new_password"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/reset_password_request"
        android:name="pl.mkotynia.musicmate.prelogin.RequestPasswordResetFragment"
        android:label="RequestPasswordResetFragment"
        tools:layout="@layout/fragment_request_password_reset">
        <action
            android:id="@+id/action_reset_password_request_to_login"
            app:destination="@id/login"
            app:popUpTo="@+id/login"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/edit_profile"
        android:name="pl.mkotynia.musicmate.postlogin.EditProfileFragment"
        android:label="EditProfileFragment"
        tools:layout="@layout/fragment_edit_profile">
        <action
            android:id="@+id/action_log_out"
            app:destination="@id/login"
            app:popUpTo="@+id/edit_profile"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_edit_to_search_profile"
            app:destination="@id/search_profile"
            app:popUpTo="@id/edit_profile"
            app:popUpToInclusive="true"
            />
    </fragment>
    <fragment
        android:id="@+id/search_profile"
        android:name="pl.mkotynia.musicmate.postlogin.SearchProfileFragment"
        android:label="SerarchProfileFragment"
        tools:layout="@layout/fragment_search_profile">
        <action
            android:id="@+id/action_search_to_edit_profile"
            app:destination="@id/edit_profile"
            app:popUpTo="@id/search_profile"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_search_to_view_profile"
            app:destination="@id/view_profile" />
    </fragment>
    <fragment
        android:id="@+id/view_profile"
        android:name="pl.mkotynia.musicmate.postlogin.ViewProfileFragment"
        android:label="ViewProfileFragment"
        tools:layout="@layout/fragment_view_profile">
        <action
            android:id="@+id/action_view_to_search_profile"
            app:popUpTo="@+id/search_profile"/>
    </fragment>
</navigation>